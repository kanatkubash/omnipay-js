{
    "compilerOptions": {
        "target": "es2017",
        "module": "none",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        // "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "types": [
            "js-money",
            "node",
            "mocha",
            "chai"
        ]
    },
    "exclude": [
        "**/*.d.ts",
        "**/*.spec.ts",
        "../node_modules"
    ]
}