        "module": "none",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "declaration": true,
